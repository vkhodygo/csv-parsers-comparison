            <version>8.1.0</version>
        </dependency>

        <dependency>
            <groupId>br.com.objectos</groupId>
            <artifactId>way-io</artifactId>
            <version>2.1.0</version>
        </dependency>

        <dependency>
            <groupId>com.opencsv</groupId>
